<Window x:Class="PokerCardsApp.Cards.CardsWhiteboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokerCardsApp.Cards"
        mc:Ignorable="d"
        Title="CardsWhiteboard" ResizeMode="NoResize" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Canvas Name="TheRootCanvas">
        <Border
            Background="White"
            BorderBrush="Black"
            BorderThickness="2"
            Height="300"
            Width="349"
            Canvas.Top="10"
            Canvas.Left="10">
            <InkCanvas Name="TheInkCanvas" Margin="0,0,-2,0"/>
        </Border>
        <TextBox Name="TextBox1"
                 Height="25"
                 Width="225"
                 Canvas.Top="325"
                 Canvas.Left="10"></TextBox>
        <Button
            Height="25"
            Width="75"
            Canvas.Top="325"
            Canvas.Left="235"
            Click="ButtonClick">Recognize</Button>
        <Button x:Name="BtnClear" Content="Clear Canvas" Canvas.Left="10" Canvas.Top="367" Width="75" Click="btnClear_Click"/>
    </Canvas>
</Window>
